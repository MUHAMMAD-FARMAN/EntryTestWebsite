<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">

    <title>Entry Test</title>
</head>

<body>

    <!-- making a mcqs quiz test page with a timer-->

    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h1 style="text-align: center; margin-top: 20px; margin-bottom: 20px;">MCQs Quiz Test</h1>
                <!-- timer -->
                <div class="timer">
                    <h4 id="timer">01:00</h4>
                </div>
                <!-- timer ends -->

                <% for(var i=0; i<mcqs.length; i++) { %>
                    <div class="card" id=<%=i+1 %>>
                        <div class="card-body">
                            <h5 class="card-title">Question <%= i+1 %>
                            </h5>
                            <h5 class="card-text">
                                <%= mcqs[i].question %>
                            </h5>
                            <hr>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name=<%=i+1 %> id="flexRadioDefault1">
                                <label class="form-check-label" for="flexRadioDefault1">
                                    <h5>
                                        <%= mcqs[i].options[0] %>
                                    </h5>
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name=<%=i+1 %> id="flexRadioDefault2">
                                <label class="form-check-label" for="flexRadioDefault2">
                                    <h5>
                                        <%= mcqs[i].options[1] %>
                                    </h5>
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name=<%=i+1 %> id="flexRadioDefault3">
                                <label class="form-check-label" for="flexRadioDefault3">
                                    <h5>
                                        <%= mcqs[i].options[2] %>
                                    </h5>
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name=<%=i+1 %> id="flexRadioDefault4">
                                <label class="form-check-label" for="flexRadioDefault4">
                                    <h5>
                                        <%= mcqs[i].options[3] %>
                                    </h5>
                                </label>
                            </div>
                        </div>

                    </div>

                    <% } %>




                        <button id="submitBtn" type="submit" class="btn btn-primary"
                            style="margin-top: 20px; margin-bottom: 20px;">Submit</button>
            </div>
        </div>
    </div>


    <script>
        document.getElementById('submitBtn').addEventListener('click', async function (e) {
            e.preventDefault();
            let cards = document.querySelectorAll('.card');

            let array = []
            cards.forEach((card) => {
                // console.log(card)
                let id = card.id;
                // console.log(id)

                let cardBody = card.childNodes[1]
                check1 = cardBody.childNodes[7]
                check2 = cardBody.childNodes[9]
                check3 = cardBody.childNodes[11]
                check4 = cardBody.childNodes[13]

                inputCheck1 = check1.childNodes[1]
                inputCheck2 = check2.childNodes[1]
                inputCheck3 = check3.childNodes[1]
                inputCheck4 = check4.childNodes[1]

                let checked = 0;
                if (inputCheck1 && inputCheck1.checked) {
                    checked = 1;
                } else if (inputCheck2 && inputCheck2.checked) {
                    checked = 2;
                } else if (inputCheck3 && inputCheck3.checked) {
                    checked = 3;
                } else if (inputCheck4 && inputCheck4.checked) {
                    checked = 4;
                } else {
                    checked = 0;
                }

                array.push({ id: id, answer: checked })

            });
            console.log(array);

            const result = await fetch('/submit', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    array: array
                })
            }).then(res => res.json());

            if (result.status === 'ok') {
                alert("Test has been submitted successfully!", result.correctMcqs);
                return;
            } else {
                alert("ERROR while submitting test!");
            }
        })

    </script>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous">
        </script>

    <script>
        // timer
        var timeleft = 60;
        var downloadTimer = setInterval(function () {
            if (timeleft <= 0) {
                clearInterval(downloadTimer);
                document.getElementById("timer").innerHTML = "Finished";
            } else {
                document.getElementById("timer").innerHTML = timeleft + " seconds remaining";
            }
            timeleft -= 1;
        }, 1000);




    </script>
</body>

<style>
    .card {
        margin-bottom: 10px;
    }
</style>


</html>